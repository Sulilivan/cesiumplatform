# 生产环境 Dockerfile - 多阶段构建
FROM node:20-alpine AS builder

WORKDIR /app

# 复制 package.json
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制所有源码
COPY . .

# 构建生产版本
RUN npm run build

# 生产镜像
FROM node:20-alpine AS production

WORKDIR /app

# 安装 serve
RUN npm install -g serve

# 从构建阶段复制 dist
COPY --from=builder /app/dist ./dist

# 暴露端口
EXPOSE 3000

# 启动服务
CMD ["serve", "-s", "dist", "-l", "3000"]
